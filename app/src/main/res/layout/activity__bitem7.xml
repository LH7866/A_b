<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".b.Activity_Bitem7">

    <include layout="@layout/include_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/l_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/l_m"
                    android:layout_width="300dp"
                    android:layout_height="150dp"
                    android:background="#00CC99"
                    android:elevation="10dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_mpv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00CC99"
                        android:stateListAnimator="@null"
                        android:text="MPV生产线"
                        android:textSize="25dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/l_c"
                    android:layout_width="300dp"
                    android:layout_height="150dp"
                    android:background="#00CC99"
                    android:elevation="10dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_car"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:stateListAnimator="@null"
                        android:text="轿车生产线"
                        android:textSize="25dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/l_s"
                    android:layout_width="300dp"
                    android:layout_height="150dp"
                    android:background="#00CC99"
                    android:elevation="10dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_suv"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00CC99"
                        android:stateListAnimator="@null"
                        android:text="SUV生产线"
                        android:textSize="25dp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/po1"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:elevation="10dp"
                    android:background="#169BD5"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_1"
                        android:background="#169BD5"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:stateListAnimator="@null"
                        android:text="位置1"
                        android:textColor="#fff"
                        android:textSize="25dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/po2"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:elevation="10dp"
                    android:background="#169BD5"
                    android:gravity="center">

                    <Button
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:id="@+id/btn_2"
                        android:background="#169BD5"
                        android:stateListAnimator="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="位置2"
                        android:textColor="#fff"
                        android:textSize="25dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/po3"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:elevation="10dp"
                    android:background="#169BD5"
                    android:gravity="center">

                    <Button
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:id="@+id/btn_3"
                        android:stateListAnimator="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="位置3"
                        android:textColor="#fff"
                        android:background="#169BD5"
                        android:textSize="25dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/po4"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:elevation="10dp"
                    android:background="#169BD5"
                    android:gravity="center">

                    <Button
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:id="@+id/btn_4"
                        android:stateListAnimator="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="位置4"
                        android:textColor="#fff"
                        android:background="#169BD5"
                        android:textSize="25dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/l_create"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:elevation="10dp"
                android:background="#169BD5"
                android:gravity="center">

                <Button
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:id="@+id/btn_create"
                    android:stateListAnimator="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="创建"
                    android:textColor="#fff"
                    android:textSize="25dp"
                    android:background="#169BD5"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>